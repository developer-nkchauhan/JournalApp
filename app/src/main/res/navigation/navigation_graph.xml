<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation"
    app:startDestination="@id/loginFragment">

    <fragment
        android:id="@+id/loginFragment"
        android:name="com.develop.journalapp.LoginFragment"
        android:label="fragment_login"
        tools:layout="@layout/fragment_login" >
        <action
            android:id="@+id/action_loginFragment_to_signUpFragment"
            app:destination="@id/signUpFragment" />
        <action
            android:id="@+id/action_loginFragment_to_mainFragment"
            app:destination="@id/mainFragment" />
    </fragment>
    <fragment
        android:id="@+id/signUpFragment"
        android:name="com.develop.journalapp.SignUpFragment"
        android:label="fragment_sign_up"
        tools:layout="@layout/fragment_sign_up" >
        <action
            android:id="@+id/action_signUpFragment_to_loginFragment"
            app:destination="@id/loginFragment" />
    </fragment>
    <fragment
        android:id="@+id/mainFragment"
        android:name="com.develop.journalapp.JournalListFragment"
        android:label="fragment_main"
        tools:layout="@layout/fragment_journal_list" >
        <action
            android:id="@+id/action_mainFragment_to_addJournalFragment"
            app:destination="@id/addJournalFragment" />
    </fragment>
    <fragment
        android:id="@+id/addJournalFragment"
        android:name="com.develop.journalapp.AddJournalFragment"
        android:label="fragment_add_journal"
        tools:layout="@layout/fragment_add_journal" >
        <action
            android:id="@+id/action_addJournalFragment_to_mainFragment"
            app:destination="@id/mainFragment" />
    </fragment>

</navigation>